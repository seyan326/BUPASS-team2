<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ac.baekseok.didstudentid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DidStudentID">
        <activity android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation"/>
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SignUp"/>
        <activity android:name=".BupassStudantActivity"/>
        <activity android:name=".AtendanceCheckStudantActivity"/>
        <activity android:name=".AttendanceCheckProfessorActivity"/>
        <activity android:name=".BupassProfessorActivity"/>
        <activity android:name=".ClassDitailsProfessorActivity"/>
        <activity android:name=".ClassDitailsStudantsActivity"/>
        <activity android:name=".ClassWeekProfessor"/>
        <activity android:name=".StudantIDCardActivity"/>
        <activity android:name=".ScanQR"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>